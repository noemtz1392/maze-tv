<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 2019 colors -->
    <color name="deep_sky_blue">#1a73e8</color> <!-- colorPrimary in Light mode-->
    <color name="warm_blue">#574ddd</color> <!-- colorPrimaryVariant in Light mode-->
    <color name="carolina_blue">#8ab4f8</color> <!-- colorPrimary in Dark mode-->
    <color name="cornflower_blue">#669DF6</color> <!-- colorPrimaryVariant in Dark mode-->

    <!-- 2019 colors -->
    <color name="teal">#069f86</color>
    <color name="bright_light_blue">#27e5fd</color>
    <color name="sun_yellow">#fcd230</color>
    <color name="bright_orange">#ff6c00</color>

    <integer-array name="swipe_refresh">
        <item>@color/deep_sky_blue</item>
        <item>@color/teal</item>
        <item>@color/bright_light_blue</item>
        <item>@color/sun_yellow</item>
        <item>@color/bright_orange</item>
    </integer-array>

    <color name="color_primary">#0C0C0C</color>
    <color name="color_primary_dark">#0C0C0C</color>
    <color name="color_accent">#00CEA9</color>

    <color name="color_white">#FFFFFFFF</color>
    <color name="color_black">#FF000000</color>
    <color name="color_transparent">#00FFFFFF</color>

    <!-- Scrim colors -->
    <color name="system_ui_scrim_light">#B3FFFFFF</color> <!-- 70% white -->
    <color name="system_ui_scrim_black">#40000000</color> <!-- 25% black -->

    <!-- We use a dark scrim by default since light status is API 23+ -->
    <color name="status_bar_scrim">@color/system_ui_scrim_black</color>
    <!-- We use a dark scrim by default since light nav bar is API 27+ -->
    <color name="nav_bar_scrim">@color/system_ui_scrim_black</color>
</resources>